<html class="letra">
<%- include ('../partials/head', {hojaDeEstilo: 'detail.css' , titulo:'Detalle'}) %>

    <body>
        <%- include ('../partials/header', {hojaDeEstilo: 'detail.css' , titulo:'Detalle'}) %>

            <main>
                <br>
                <article class="editProduct">
                    <div style="width: 35%;text-align: center;">
                        <img class="imagenOfertas" src="../images/<%= items.image %> " alt="oferta1" title="oferta1"
                            style="height: fit-content; width: 40%;">
                    </div>

                    <form class="productEdit" action="../productos/<%= indexProducto%>" method="POST" >
                        <br>
                            <h3>EDITAR EL PRODUCTO SELECCIONADO</h3>
                        <br>
                        <div class="campos-estilo">
                            <label  for="id">ID producto:</label>
                            <input class="form-input" type="number" name="id" value=<%=items.id%>>
                        </div>
                        <div class="campos-estilo">
                            <label  for="name">Nombre producto:</label>
                            <input class="form-input" type="text" name="name" value=<%=items.name%>>
                        </div>

                        <div class="campos-estilo">
                            <label  for="category">Categoría actual: <%=items.product_category.name %></label>
                            <select name="category">
                            <% for(let index = 0; index < categories.length;index++) {%> 
                            <option value="<%=categories[index].dataValues.id%>"><%=categories[index].dataValues.name %></option>  
                            <% } %> 
                            </select>
                        </div>
                        
                        <div class="campos-estilo">
                            <label  for="brand">Marca: <%=items.product_brand.name %></label>
                            <select name="brand">
                            <% for(let index = 0; index < brands.length;index++) {%> 
                            <option value="<%=brands[index].dataValues.id%>"><%=brands[index].dataValues.name %></option>  
                            <% } %> 
                            </select>
                        </div>
                        <br>

                        <div class="campos-estilo">
                            <label  for="price">Precio del producto:$</label>
                            <input class="form-input" type="number" name="price" value=<%=items.price%>>
                        </div>       
                        
                        <div class="campos-estilo">
                            <label  for="discount">Descuento del producto:%</label>
                            <input class="form-input" type="number" name="discount" value=<%=items.discount%>>
                        </div>

                        <div class="campos-estilo">
                            <label  for="oferta">Oferta - Valor actual: <%=items.offer%></label>
                            <div><input type="radio" name="offer" value=SI >SI</div>
                            <div><input type="radio" name="offer" value=NO >NO</div>
                        </div>

                        <BR>
                     
                        <div class="campos-estilo">
                            <label  for="stock">Stock del producto (unidades):</label>
                            <input class="form-input" type="number" name="stock" value=<%=items.stock%>>
                        </div>
                        <br>
                        <div>
                            <label  for="description">Descripción</label>
                        </div>
                        <div>
                            <textarea class="form-text" name="description" rows="10" style="width:100%"><%=items.description%></textarea>
                        </div>
                        <BR>
                       <div><label  for="image">Imagen de producto: <%=items.image%></label></div>
         
                         <!-- <div><input type="file" id="name" name="image" accept=".jpg" multiple style="width: 90%;" ></div> -->
                        <BR>
                                          
                        <div class="buttons_contenedor">
                            <div><button class="button" type="submit">GUARDAR / EDITAR</button></div>
                            <div><button class="button"  type="reset">CANCELAR</button></div>
                            <div><a href="/productos/productList" style="text-decoration: none;"><input class="button"  type="button"  value="VOLVER"></a></div>
                        </div>
                        <BR>  
                    </form> 
                </article>
                <br>
            </main>

            <%- include ('../partials/footer', {hojaDeEstilo: 'detail.css' , titulo:'Detalle'}) %>
    </body>

</html>
</body>

</html>