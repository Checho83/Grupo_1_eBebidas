                            <div class="buttons_contenedor" >
                                    <div><button class="button"  type="submit">GUARDAR / EDITAR</button>  </div>    
                                    <div><button class="button"   type="reset">CANCELAR</button> </div>  
                                    <div><a href="/user/userList" style="text-decoration: none;"><input class="button" type="button"  value="VOLVER"></a></div>    
                            </div>
                            
                            <BR> 
                    </div>


