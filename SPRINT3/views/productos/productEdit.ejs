<html class="letra">
<%- include ('../partials/head', {hojaDeEstilo: 'productEdit.css' , titulo:'registro'}) %>

    <body>
        <%- include ('../partials/header', {hojaDeEstilo: 'productEdit.css' , titulo:'registro'}) %>
            <main>
                
                <form action="/" method="get">
                    <h3>ALTA/BAJA CATEGORIA - PRODUCTO</h3>
                    <BR>
                    <DIV class="categoriaContenedor"><div><label>Categoria:</label></div>
                        <div><select name="categoria">
                            <option value="CERVEZA">CERVEZA</option>
                            <option value="VINOS">VINOS</option>
                            <option value="DESTILADOS">DESTILADOS</option>
                            <option value="COCTELERIA">COCTELERIA</option>
                            <option value="NUEVA CATEGORIA" style="font-weight:bolder; font-style: italic;">NUEVA CATEGORIA</option>
                        </select></div>
                        <div><input type="button" style="font-weight: bolder;padding: 1%;" value="BORRAR CATEGORIA"></div>
                    </DIV>
                    
                    <BR>
                    <div class="ProductoContenedor"><div><label>Producto:</label></div>
                        <div><select name="nombreProducto">
                            <option value="1">Warsteiner</option>
                            <option value="2">Brouwerij</option>
                            <option value="3">Imperial IPA</option>
                            <option value="4">Imperial Amber</option>
                            <option value="5" style="font-weight:bolder;font-style: italic;">NUEVO PRODUCTO</option>
                        </select></div>
                        <div><input type="button" style="font-weight: bolder;padding: 1%;" value="BORRAR PRODUCTO"></div>
                    </div>
                    <BR>
                        <div><label class="form1" for="nombre">Nombre de categoria:</label></div>
                        <div></div><input type="text" name="nombre" placeholder="ej CERVEZA" required></div>
                    <BR>
                    <div><label class="form1" for="nombre">Nombre producto:</label></div>
                    <div></div><input type="text" name="nombre" placeholder="ej Warsteiner" required></div>
                    <BR>
                    <div><label class="form1" for="descripcion">Descripción:</label></div>
                    <div><input type="text" name="descripcion"  required minlength="2" placeholder="Descripción" ></div>
                    <BR>
                    <div><label class="form1" for="detalle">Detalle</label></div>
                    <div><textarea name="detalle" rows="10" style="width:100%" placeholder="Descripción detallada" ></textarea>
                    </div>
                    <BR>
                    <div><label class="form1" for="fotoProducto">Seleccionar una imagen de producto:</label></div>
                    <div><input type="file" name="fotoProducto" accept=".jpg" multiple style="width: 90%;" required></div>
                    <BR>
                    <div class="contenedorPrecioStock"><div><label  for="precio">Precio</label>
                    <input type="number" name="precio" style="width: 20%;" required></div>
                    <div><label  for="stock">Stock </label>
                    <input type="number" name="stock" style="width: 20%;" required></div>
                    </div>
                    <BR>
                    <div  style="text-align:center;" ><input type="button" style="font-weight: bolder;padding: 1%;" value="PREVISUALIZAR FICHA PRODUCTO"></div>
                    <BR>
                    <div style="text-align:center;"><button type="submit">GUARDAR</button>
                        <button type="reset"> Cancelar </button>
                        <button type="button">Cambiar ADMIN/PASS</button>
                    </div>
                </form>
            </main>

            <%- include ('../partials/footer', {hojaDeEstilo: 'register.css' , titulo:'registro'}) %>
    </body>

</html>