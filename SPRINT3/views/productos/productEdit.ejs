<html class="letra">
<%- include ('../partials/head', {hojaDeEstilo: 'productEdit.css' , titulo:'registro'}) %>

    <body>
        <%- include ('../partials/header', {hojaDeEstilo: 'productEdit.css' , titulo:'registro'}) %>
            <main>

                <form action="/" method="get">
                    <BR>
                    <DIV><label>Categoria</label>
                        <select name="categoria">
                            <option value="CERVEZA">CERVEZA</option>
                            <option value="VINOS">VINOS</option>
                            <option value="DESTILADOS">DESTILADOS</option>
                            <option value="COCTELERIA">COCTELERIA</option>
                            <option value="NUEVA CATEGORIA">NUEVA CATEGORIA</option>
                        </select>
                    </DIV>
                    <BR>
                    <DIV><label>Nombre producto</label>
                        <select name="nombreProducto">
                            <option value="1">Warsteiner</option>
                            <option value="2">Brouwerij</option>
                            <option value="3">Imperial IPA</option>
                            <option value="4">Imperial Amber</option>
                            <option value="5">NUEVO PRODUCTO</option>
                        </select>
                    </DIV>
                    <BR>
                    <div><label class="form1" for="nombre">Nombre producto</label></div>
                    <div><input type="text" name="nombre" style="width: 90%;" required></div>
                    <div><label class="form1" for="descripcion">Descripcion</label></div>
                    <div><input type="text" name="descripcion" style="width: 90%;" required minlength="2"></div>
                    <div><label class="form1" for="detalle">Detalle</label></div>
                    <div><textarea name="detalle" rows="10" cols="50">Poner texto aca</textarea>
                    </div>



                    <div><label class="form1" for="fotoProducto">Seleccionar una imagen de producto:</label></div>
                    <input type="file" name="fotoProducto" accept=".jpg" multiple style="width: 90%;">
                    
                    <div class="contenedorPrecioStock"><div><label  for="precio">Precio</label>
                    <input type="number" name="precio" style="width: 20%;" required></div>
                    <div><label  for="stock">Stock </label>
                    <input type="number" name="stock" style="width: 20%;" required></div>
                    </div>

                    <div><button type="submit">GUARDAR</button>
                        <button type="reset"> Cancelar </button>
                    </div>
                </form>
            </main>

            <%- include ('../partials/footer', {hojaDeEstilo: 'register.css' , titulo:'registro'}) %>
    </body>

</html>